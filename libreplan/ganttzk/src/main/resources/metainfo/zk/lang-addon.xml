        <widget-class>ganttz.DependencyComponent</widget-class>
        <mold>
            <mold-name>default</mold-name>
            <mold-uri>mold/dependency-component.js</mold-uri>
        </mold>
    </component>

    <component>
        <component-name>timetracker</component-name>
