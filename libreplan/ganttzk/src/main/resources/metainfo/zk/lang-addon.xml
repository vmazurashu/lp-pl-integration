        <component-class>org.zkoss.ganttz.TaskRow</component-class>
        <widget-class>ganttz.TaskRow</widget-class>
        <mold>
            <mold-name>default</mold-name>
            <mold-uri>mold/task-row.js</mold-uri>
        </mold>
    </component>

    <component>
