<!-- Cost status -->
<div id="${arg.id}" apply="org.libreplan.web.dashboard.CostStatusController" width="400px">
    <hbox style="padding:20px 50px">
        <vbox width="450px">
            <hbox hflex="1" pack="center" vflex="1" style="margin-bottom:5px">
                <label sclass="dashboard-title" value="${i18n:_('Current state indicators')}" />
            </hbox>
            <vbox width="20px" />
            <div sclass="dashboard-box" style="padding: 25px;">

                <!-- Overtime ratio -->
                <hbox hflex="1" vflex="1">
                    <vbox hflex="1" align="pack" vflex="1">
                        <vbox style="margin-bottom:10px">
                            <label sclass="dashboard-label" value="@{controller.labelCV}" />
                            <label sclass="dashboard-label dashboard-label-remarked" id="lblCV"/>
                        </vbox>
                        <label sclass="dashboard-label" value="@{controller.labelACWP}"
                               tooltiptext="${i18n:_('Hours invested')}" />
                        <label sclass="dashboard-label dashboard-label-remarked" id="lblACWP" />
                    </vbox>

                    <vbox hflex="1" align="pack" vflex="1">
                        <vbox style="margin-bottom:10px">
                            <label sclass="dashboard-label" value="@{controller.labelCPI}" />
                            <label sclass="dashboard-label dashboard-label-remarked" id="lblCPI" />
                        </vbox>
                        <label sclass="dashboard-label" value="@{controller.labelETC}"
                               tooltiptext="${i18n:_('Remaining time')}" />
                        <label sclass="dashboard-label dashboard-label-remarked" id="lblETC" />
                    </vbox>
                </hbox>

            </div>
        </vbox>

        <vbox width="40px" />

        <vbox width="450px">
            <hbox hflex="1" pack="center" vflex="1" style="margin-bottom:5px">
                <label sclass="dashboard-title" value="${i18n:_('Project closing previsions')}" />
            </hbox>

            <div sclass="dashboard-box" style="padding: 25px;">

                <!-- Overtime ratio -->
                <hbox hflex="1" vflex="1">
                    <vbox hflex="1" align="pack" vflex="1">
                        <vbox style="margin-bottom:10px">
                            <label sclass="dashboard-label" value="@{controller.labelEAC}" />
                            <label sclass="dashboard-label dashboard-label-remarked" id="lblEAC" />
                        </vbox>
                        <label sclass="dashboard-label" value="@{controller.labelBAC}" />
                        <label sclass="dashboard-label dashboard-label-remarked" id="lblBAC" />
                    </vbox>
                    <vbox hflex="1" align="pack" vflex="1">
                        <label sclass="dashboard-label" value="@{controller.labelVAC}" />
                        <label sclass="dashboard-label dashboard-label-remarked" id="lblVAC" />
                    </vbox>
                </hbox>

            </div>
        </vbox>

    </hbox>
</div>
